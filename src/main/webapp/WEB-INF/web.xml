<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>MainFormServlet</servlet-name>
        <servlet-class>org.example.petstore.web.servlet.MainFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryFormServlet</servlet-name>
        <servlet-class>org.example.petstore.web.servlet.CategoryFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductFormServlet</servlet-name>
        <servlet-class>org.example.petstore.web.servlet.ProductFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchFormServlet</servlet-name>
        <servlet-class>org.example.petstore.web.servlet.SearchFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainFormServlet</servlet-name>
        <url-pattern>/mainForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryFormServlet</servlet-name>
        <url-pattern>/categoryForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductFormServlet</servlet-name>
        <url-pattern>/productForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchFormServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

</web-app>